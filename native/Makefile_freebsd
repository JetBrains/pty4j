# Defaults which can be overridden.
FREEBSD=freebsd
ARCH_X86 = x86
ARCH_X86_64 = x86_64

CC=cc
LD=libtool
CPPFLAGS = -I.
CFLAGS +=-B/usr/lib/x86_64-freebsd-gnu -fpic -D_REENTRANT -D_GNU_SOURCE

ARCH_FLAG_X86 = -m32 
ARCH_FLAG_X86_64 = 

INSTALL_DIR_FREEBSD_X86 = ../os/$(FREEBSD)/$(ARCH_X86)
INSTALL_DIR_FREEBSD_X86_64 = ../os/$(FREEBSD)/$(ARCH_X86_64)

LIB_NAME_PTY = libpty.so

LIB_NAME_FULL_PTY_FREEBSD_X86 = $(INSTALL_DIR_FREEBSD_X86)/libpty.so
LIB_NAME_FULL_PTY_FREEBSD_X86_64 = $(INSTALL_DIR_FREEBSD_X86_64)/libpty.so

OBJS_PTY_X86 = exec_pty_$(ARCH_X86).o openpty_$(ARCH_X86).o pfind_$(ARCH_X86).o
OBJS_PTY_X86_64 = exec_pty_$(ARCH_X86_64).o openpty_$(ARCH_X86_64).o pfind_$(ARCH_X86_64).o

OBJS_X86 = $(OBJS_PTY_X86)
OBJS_X86_64 = $(OBJS_PTY_X86_64)

all: freebsd_x86 freebsd_x86_64

freebsd_x86: $(LIB_NAME_FULL_PTY_FREEBSD_X86)
freebsd_x86_64: $(LIB_NAME_FULL_PTY_FREEBSD_X86_64)

rebuild: clean all

$(LIB_NAME_FULL_PTY_FREEBSD_X86): $(OBJS_PTY_X86)
	mkdir -p $(INSTALL_DIR_FREEBSD_X86)
	$(CC) -m32 -g -shared -Wl,-soname,$(LIB_NAME_PTY) $(LDFLAGS) -o $(LIB_NAME_FULL_PTY_FREEBSD_X86) $(OBJS_PTY_X86)

$(LIB_NAME_FULL_PTY_FREEBSD_X86_64): $(OBJS_PTY_X86_64)
	mkdir -p $(INSTALL_DIR_FREEBSD_X86_64)
	$(CC) -g -shared -Wl,-soname,$(LIB_NAME_PTY) $(LDFLAGS) -o $(LIB_NAME_FULL_PTY_FREEBSD_X86_64) $(OBJS_PTY_X86_64)

exec_pty_$(ARCH_X86).o: exec_pty.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86) $(CPPFLAGS) -c -o $@ exec_pty.c

openpty_$(ARCH_X86).o: openpty.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86) $(CPPFLAGS) -c -o $@ openpty.c

pfind_$(ARCH_X86).o: pfind.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86) $(CPPFLAGS) -c -o $@ pfind.c

exec_pty_$(ARCH_X86_64).o: exec_pty.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86_64) $(CPPFLAGS) -c -o $@ exec_pty.c

openpty_$(ARCH_X86_64).o: openpty.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86_64) $(CPPFLAGS) -c -o $@ openpty.c

pfind_$(ARCH_X86_64).o: pfind.c
	$(CC) $(CFLAGS) $(ARCH_FLAG_X86_64) $(CPPFLAGS) -c -o $@ pfind.c

clean :
	$(RM) $(OBJS_X86) $(LIB_NAME_FULL_PTY_FREEBSD_X86)
	$(RM) $(OBJS_X86_64) $(LIB_NAME_FULL_PTY_FREEBSD_X86_64)
